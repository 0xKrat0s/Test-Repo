{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["package.json"],
        "tscOptions": {
          "skipLibCheck": true,
          "skipCheck": true
        }
      }
    }
  ],
  "env": {
    "NITRO_PRESET": "vercel",
    "NUXT_SKIP_TS_CHECK": "true"
  },
  "routes": [
    {
      "src": "/_nuxt/(.*)",
      "headers": {
        "cache-control": "public,max-age=31536000,immutable"
      },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "github": {
    "silent": true
  }
} 